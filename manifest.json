{
    "manifest_version": 3,
    "name": "Banish Amazon Sponsored",
    "description": "Chrome extension to hide sponsored products from Amazon search results, showing you more of the stuff you were actually looking for",
    "version": "1.3",

    "content_scripts": [
        {
            "matches": [ "http://www.amazon.com/*", "https://www.amazon.co.uk/*", "https://www.amazon.com.au/*", "https://www.amazon.com.br/*", "https://www.amazon.ca/*", "https://www.amazon.cn/*", "https://www.amazon.eg/*", "https://www.amazon.fr/*", "https://www.amazon.de/*", "https://www.amazon.in/*", "https://www.amazon.it/*", "https://www.amazon.co.jp/*", "https://www.amazon.com.mx/*", "https://www.amazon.nl/*", "https://www.amazon.pl/*", "https://www.amazon.sa/*", "https://www.amazon.sg/*", "https://www.amazon.es/*", "https://www.amazon.se/*", "https://www.amazon.com.tr/*", "https://www.amazon.ae/*" ],
            "css": [ "styles.css" ], 
	    "run_at": "document_idle"
        }
    ],

    "icons": {
	    "16": "banish_sponsored16.png",
	    "48": "banish_sponsored48.png",
	    "128": "banish_sponsored128.png"
    }
}


